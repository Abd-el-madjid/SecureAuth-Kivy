MDScreen:
    name:"finger_authentification"
    MDFloatLayout:
        id:"finger_authentification_layout"
        md_bg_color:1,1,1,1
        
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y":.95}
            user_font_size:"30sp"
            theme_text_color:"Custom"
            text_color:rgba(26,24,58,255)
            on_release:
                root.manager.transition.direction ="right"
                root.manager.current = "main"

        Image:
            source:"C:/Users/abdel/OneDrive/Bureau/atelier/atelier image/atelier img/undraw_Fingerprint_login_re_t71l.png"
            pos_hint:{"left": 0, "top": 0.9}
            size_hint_x: 1
            size_hint_y: 0.6
            allow_stretch: True
            keep_ratio: True

        MDLabel:
            text: " S T E P 3 "
            font_name:"BPoppons"  
            font_size:"23sp"
            pos_hint:{"center_x": .5, "center_y": .3}
            halign : "center"
            color: rgba(34,34,34,255)     
        MDLabel:
            text: "  start your finger  authentification by clicking the button START Scanning"
            font_name:"MPoppons"  
            font_size:"13sp"
            pos_hint:{"center_x": .5, "center_y": .25}
            halign : "center"
            color: rgba(127,127,127,255) 
        Button:
            id: finger_authentification_button
            text:"START scanning"
            size_hint:.66,.065
            background_color:0,0,0,0
            font_name:"BPoppons"
            pos_hint:{"center_x": .5, "center_y": .15}
            on_release:
                app.start_finger_authentification()
            canvas.before:
                Color:
                    rgb: rgba(70,128,127,255)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[5]
